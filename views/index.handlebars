  <div class="main-container">
    <div class="homepage-container">
      <div id="alertDiv">
        
      </div>
      <!-- <div class="logo">Todo List</div> -->
      <p class="homepage-about">Todo List</p>
     
      {{#if errors}}
      <div id="alertDiv">
        <div class="alert alert-warning validation-error "style="color: red">
        		{{errors}}
        </div>
      </div>
      {{/if}}

      {{#if currentUser}}
      <div>
        <p> Welcome, <b>{{currentUser.name}}</b></p><br>
      </div>
      {{/if}}

      {{#if currentUser}}
      <div>
        {{#if tasks}}
          <ul>
          {{#each tasks}}
            {{#if this.isComplete}}
              <li><a href="/tasks/complete?id={{this._id}}"><button type="button">Done!</button></a>
                <strike>{{this.title}} </strike> 
              {{#if this.mine}}
                <a href="/tasks/remove?id={{this._id}}"><button type="button">Delete!</button></a>
              {{/if}}
              </li>
            {{else}}
            
            <li>
              <a href="/tasks/complete?id={{this._id}}"><button type="button">Done!</button></a>
              {{this.title}}
              {{#if this.mine}}
              <a href="/tasks/remove?id={{this._id}}"><button type="button">Delete!</button></a>
              {{/if}}
            </li>
            {{/if}}
          {{/each}}
        </ul>
        {{else}}
          No tasks to show.
        {{/if}}     
        
        <h4>Add a new task</h4>
        <form action="/tasks/create" id="signup" method="POST">
          <label for="title">Title</label>
          <input name="title" id="title" type="text"><br>
          <label for="description">Description</label>
          <input name="description" id="description" type="text"><br>
          Collaborators<br>
          <input name="collaborator1" id="collaborator1" type="email"><br>
          <input name="collaborator2" id="collaborator2" type="email"><br>
          <input name="collaborator3" id="collaborator3" type="email"><br>
          <input type="submit">

        </form>
      </div>
      {{else}}
      <button class="login blue">Log In</button>
      <button class="signup blue">Sign Up</button>
    </div>
    <form action="/user/login" method="post" >
      <input name="email"  type="email" class="text-input" placeholder="email">
      <input name="password" type="password" class="text-input" placeholder="password">
      <button class="blue log-in-submit">Log In</button>
    </form>
    <form action="/user/register" method="post">
      <input name="fl_name" type="text" class="text-input" placeholder="first &amp; last name">
      <input name="email" type="email" class="text-input" placeholder="email">
      <input name="password" type="password" class="text-input" placeholder="password">
      <input name="password_confirmation" type="password" class="text-input" placeholder="password confirmation">
      <div>
        <button class="blue sign-up-submit">Sign Up</button>
      </div>
    </form>
    {{/if}}
  </div>
  <script>
    $('.homepage-container .signup').on('mousedown', function(){
      $('.homepage-container').addClass('with-form');
      $('.homepage-container .login').removeClass('pressed');
      $(this).addClass('pressed');
      $('.signup-form').fadeIn(0, function(){
        $(this).removeClass('hidden');
      });
      $('.login-form').fadeOut(0, function(){
        $(this).addClass('hidden');
      });
    })
    $('.homepage-container .login').on('mousedown', function(){
      $('.homepage-container').addClass('with-form');
      $('.homepage-container .signup').removeClass('pressed');
      $(this).addClass('pressed');
      $('.login-form').fadeIn(0, function(){
        $(this).removeClass('hidden');
      });
      $('.signup-form').fadeOut(0, function(){
        $(this).addClass('hidden');
      });
    })

  </script>
